{
  "name": "advanced-react",
  "version": "1.0.0",
  "main": "lib/server.js",
  "repository": "snazarkoo/advanced-react",
  "author": "snazarkoo",
  "license": "MIT",
  "scripts": {
    "dev": "set NODE_PATH=./lib&& nodemon --exec babel-node lib/server.js --ignore node_modules/ --name appDev",
    "webpack": "webpack -wd",
    "test": "jest --watch",
    "verify-tests": "jest --coverage",
    "build-webpack": "webpack -p",
    "build-node": "babel lib -d build --copy-files",
    "start-prod": "set NODE_ENV=production set NODE_PATH=./build&& nodemon build/server.js -i max --name appProd"
  },
  "babel": {
    "presets": [
      "react",
      ["env", { "targets": { "node": "current" } }]
    ],
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.12.1",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^21.2.1",
    "react-test-renderer": "^16.2.0"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "lodash.debounce": "^4.0.8",
    "lodash.pickby": "^4.6.0",
    "nodemon": "^1.12.1",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "webpack": "^3.9.1"
  }
}
